<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
		>

	<LinearLayout
			android:id="@+id/ll_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			>
		<ImageView
				android:id="@+id/image_priority_task"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:src="@drawable/ic_launcher"
				/>
	</LinearLayout>
	
	<TextView
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/tv_task_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_toRightOf="@id/ll_image"
			android:text="def name"
			/>

	<TextView
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/tv_task_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/ll_image"
			android:layout_below="@id/tv_task_name"
			android:text="def date"
			/>

	<CheckBox
			android:id="@+id/chbox_item_sel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:focusable="false"
			android:layout_marginRight="16dp"
			/>

</RelativeLayout>